# Add "bin" folder to PATH (like in bash)
export PATH=$HOME/bin:/usr/local/bin:$PATH

# Set the default terminal
export TERMINAL=alacritty

# Use Helix as default text editor
export EDITOR=helix
export VISUAL=helix
export VIMRUNTIME=/usr/share/nvim/runtime
# Use Noevim as manpage viewer
#export MANPAGER='nvim +Man! -c "set scrolloff=8"'

# Use FireFox as default browser
export BROWSER=firefox

# QT5 apps needing icon themes
export QT_QPA_PLATFORMTHEME=qt5ct

# Define the location of the dotfiles
export DOTFILES=~/dotfiles

